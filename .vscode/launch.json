{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Electron",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "args": [
                "."
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "outputCapture": "std"
        }
    ]
}